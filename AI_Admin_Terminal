    <h2>âš¡ AI Control Hub: Terminal V1</h2>
    
    <div id="terminal-box">
        <div class="output-line">System Initialized... Waiting for input.</div>
    </div>

    <div class="input-area">
        <span id="prompt">admin@ai-core:~$</span>
        <input type="text" id="cmd-input" placeholder="Type command here (e.g., dir, ls, python --version)" autofocus>
    </div>

    <script>
        var socket = io();
        var terminalBox = document.getElementById('terminal-box');
        var inputField = document.getElementById('cmd-input');

        inputField.addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                event.preventDefault();
                var command = inputField.value;
                
                // Show user command in history
                var historyLine = document.createElement("div");
                historyLine.className = "output-line command-history";
                historyLine.innerText = "admin@ai-core:~$ " + command;
                terminalBox.appendChild(historyLine);

                // Send to Python Backend
                socket.emit('command_input', command);
                
                inputField.value = ""; // Clear input
                scrollToBottom();
            }
        });

        socket.on('terminal_output', function(data) {
            var outputLine = document.createElement("div");
            outputLine.className = "output-line";
            outputLine.innerText = data.output;
            terminalBox.appendChild(outputLine);
            scrollToBottom();
        });

        function scrollToBottom() {
            terminalBox.scrollTop = terminalBox.scrollHeight;
        }
    </script>
</body>
